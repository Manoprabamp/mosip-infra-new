name: ncipher-hwsp

docker:
  image: madrasindiadeploy/nshield-hwsp
  tag: 12.60.3 

socket:
  hostPath: {{ ncipher.socket.host_path }}
  mount: {{ ncipher.socket.mount }}

config: 
  path: {{ ncipher.config.path }} 
  mount: {{ ncipher.config.mount }} 

dockerHub:
  private: {{ docker_hub.private }}  
  keyname: {{ docker_hub.keyname }}

