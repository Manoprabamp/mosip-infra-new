  server: {{ nfs.server }}
sc:
  name: ""
pv:
  name: ncipher-hwsp-pv
  size: 20Mi
pvc:
  name: ncipher-hwsp-pvc
  size: 20Mi 

probe:
  initialDelay: 15  # Seconds
  period: 30 # Seconds
healthUrl: ''
